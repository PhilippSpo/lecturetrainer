@import '/bower_components/lost-grid/stylus/lost.styl'
@import 'nib'

normalize-base()
normalize-html5()

$gutter = 20px

// edit()

.center-wrapper
	center()

.questioning-wrapper
	padding 10px
	padding-top 20px

.button-footer
	border-top 1px solid border-color
	padding 10px 0
	position absolute
	bottom 0
	left 0
	right 0


*
	-webkit-font-smoothing: antialiased
	box-sizing border-box

media="screen, projection"

body
	color #4D4D4E
	font-family Roboto
	font-size 16px
	font-weight 500

.navbar-fixed
	z-index 997
	
ul.side-nav.fixed li.menu-item
	line-height: 44px

ul.side-nav li.logo
	padding: 0
	a
		color: white
	
ul.collection
	border: 0
	
li.collection-item.header-item
	border: 0
	
ul.collection a.collection-item
	color: rgba(0, 0, 0, 0.87)
	&:hover
		background: #fff !important
		
.text-green
	color green
	
.text-red
	color red