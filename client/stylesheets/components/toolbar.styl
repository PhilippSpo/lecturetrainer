.toolbar
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  display flex
  align-items center

  font-family RobotoDraft, Roboto, sans-serif
  font-size 24px
  font-weight normal

  > *
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    display flex
    align-items center
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

    &:before
      content:'';
      width:100%;
      height:100%;
      position:absolute;
      left:0;
      top:0;
      background:linear-gradient(to right, transparent 86%, #4480F7);

  > :last-child
    left auto
    right 16px

  > :first-child
    left 16px
    > i
      font-size 24px
      color rgba(0,0,0,0.54)

  > :nth-child(2)
    text-align left
    left 72px
