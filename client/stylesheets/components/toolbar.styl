.toolbar
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  display flex
  align-items center

  font-family RobotoDraft, Roboto, sans-serif
  font-size 24px
  font-weight normal

  > *
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    display flex
    align-items center

  > :last-child
    left auto
    right 16px

  > :first-child
    left 16px
    > i
      font-size 24px
      color rgba(0,0,0,0.54)

  > :nth-child(2)
    text-align left
    left 72px
